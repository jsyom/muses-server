{
  "name": "muses-server",
  "version": "1.0.0",
  "description": "Backend project for client \"Muses\"",
  "main": "./src/server.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && node ./dist/server.js",
    "clean": "rimraf dist/*",
    "build": "npm run clean && tsc",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/server.ts",
    "test": "cross-env NODE_ENV=test ./node_modules/mocha/bin/_mocha",
    "seed": "npm run build && node ./dist/seed/index.js",
    "lint": "tslint --project ./tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://jsyom@bitbucket.org/omiologic/muses-server.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/omiologic/muses-server#readme",
  "dependencies": {
    "@types/passport-jwt": "^3.0.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "chalk": "^2.2.0",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "cross-env": "^5.1.1",
    "dotenv": "^4.0.0",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-json": "^2.0.2",
    "koa-jwt": "^3.2.2",
    "koa-logger": "^3.1.0",
    "koa-passport": "^4.0.1",
    "koa-router": "^7.2.1",
    "koa-session": "^5.5.0",
    "node-pre-gyp": "^0.6.39",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "pg-native": "^2.2.0",
    "reflect-metadata": "^0.1.10",
    "sequelize": "^4.15.0",
    "sequelize-cli": "^3.0.0",
    "sequelize-typescript": "^0.5.0",
    "typescript": "^2.6.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/chalk": "^2.2.0",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.25",
    "@types/koa-json": "^2.0.17",
    "@types/koa-jwt": "^3.2.1",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-passport": "^2.0.4",
    "@types/koa-router": "^7.0.23",
    "@types/koa-session": "^3.0.5",
    "@types/node": "^8.0.49",
    "@types/pg": "^7.1.5",
    "@types/sequelize": "^4.0.78",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^3.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0"
  },
  "config": {
    "clientPort": "4200",
    "defaultTarget": "http://localhost:",
    "apiPort": "3000",
    "baseUrl": "/api/"
  }
